- model_class = Bot
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:account) + ':'
  %br
  = @bot.account
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @bot.user_id
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @bot.name
%p
  %strong= model_class.human_attribute_name(:followers) + ':'
  %br
  = @bot.followers
%p
  %strong= model_class.human_attribute_name(:comment) + ':'
  %br
  = @bot.comment

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), bots_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_bot_path(@bot), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), bot_path(@bot), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
